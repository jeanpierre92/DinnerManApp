<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SeekBar
        android:id="@+id/schedule_seek_bar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:max="5"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/gen_schedule_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/schedule_seek_bar"
        android:layout_centerHorizontal="true"
        android:text="Generate a schedule for 2 days" />

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/listView_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gen_schedule_button" />

</RelativeLayout>