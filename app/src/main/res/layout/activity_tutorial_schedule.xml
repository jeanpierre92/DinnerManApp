<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#60000000">

    <!-- The ActionBar displayed at the top -->

    <!-- The main content view where fragments are loaded -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:textSize="24sp"
        android:text="Use the slider to set the number of days you want a schedule for\n         Press generate a schedule to retrieve the schedule"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="#008799"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:text="Got it!"
        android:id="@+id/gotItButton"
        android:onClick="onClickGotIt"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#00bcd5"
        android:textColor="#ffffff"
        android:minHeight="45dp"
        android:minWidth="90dp" />
</RelativeLayout>
